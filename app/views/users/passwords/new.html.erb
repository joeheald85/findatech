<% content_for :page_head do %>
    <h1>Forgot your password?</h1>
<% end %>

<div class="row sessions">
    <div class="sessions-left">
        <div class="inner">
            <h2>Sign in with Facebook</h2>
            <%= link_to "Login with Facebook", user_omniauth_authorize_path(:facebook), :class => "fb-popup fb-btn", :"data-width" => 600, :"data-height" => 400 %>
        </div>
    </div>
    <div class="sessions-right">
        <div class="inner">
            <h2>Rest your password</h2>
            <p class="up">Forgot your password? Enter your email address below, and we’ll send you a reset link</p>
            <%= form_for @user, :url => password_path(resource_name), :validate => true do |f| %>
                <% flash.each do |name, msg| %>
                    <%= content_tag :p, msg, :class => "alert alert-error flash_#{name}" if msg.length > 0 %>
                <% end %>

                <%= f.label :email %>
                <%= f.email_field :email, :validate => {:uniqueness => false} %>

                <div class="submit">
                    <%= f.submit "Reset Password", :class => "btn btn-xl btn-submit" %>
                </div>
            <% end %>
            <p>Didn’t forget your password? <%= link_to 'Sign in.', new_user_session_path %></p>
        </div>
    </div>
    <div class="sessions-full">
        <p class="register-msg">
            Don’t have an account yet? <%= link_to 'Register today', new_user_registration_path %>
        </p>
    </div>
</div>