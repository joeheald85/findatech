<div>
	<% if @user.profile_picture.present? %><p><%= image_tag @user.profile_picture.url(:medium)%></p><% end %>
    <h2><%= @user.full_name %> - <%= @user.username %></h2>
	
	<p>Location: <%= @user.city %>, <%= @user.state %> <%= @user.zip %></p>
	
	<% if !@user.bio.blank? and @user.role?('tech') %>
		<h4>About this Tech</h4>
		<p><%= @user.bio %></p>
	<% end %>
</div>