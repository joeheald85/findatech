	<div id="top">
		
		<div class="content_pad">			
			<ul class="right">
				
				<li>
					<% if user_signed_in? %>
						<a href="/users/dashboard" class="top_icon"><span class="ui-icon ui-icon-person"></span>Logged in as <%= current_user.username %></a>
					<% else %>
						<a href="/users/sign_in" class="top_icon"><span class="ui-icon ui-icon-person"></span>Sign in</a>
					<%end%>
				</li>
				<li>
					<%if user_signed_in?%>
						<% user_role = current_user.role?('tech') ? 'tech' : (current_user.role?('user') ? 'user' : 'admin') %>
						<% if user_role == 'user' %>
							<% @alert = Appointment.find(:all, :conditions => "status = 'unconfirmed' and user_id = #{current_user.id}")%>
						<% elsif user_role == 'tech' %>
							<% @alert = Appointment.find(:all, :conditions => "(status = 'rescheduled' or status = 'new') and user_id = #{current_user.id}") %>
						<% end %>
							
						<%if @alert.blank?%>
							<%= link_to "No Alerts", "/"%>
						<%else%>
							<%= link_to "New Alerts", "/users/appointments", :class => 'new_messeges top_alert'%>
						<%end%>
					<%end%>
				</li>
					
				<% if user_signed_in? %>
					<li><%= link_to "Profile", edit_user_registration_url %></li>
					<li><%= link_to "Logout", destroy_user_session_path, :method => 'delete' %></li>
				<% end %>
			</ul>
		</div> <!-- .content_pad -->
		
	</div> <!-- #top -->	